<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/content_speakers"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardCornerRadius="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/scan_student"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_dark"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:text="Datos Personales"/>

            </RelativeLayout>

            <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/scan_student"
                android:layout_width="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/button_bg_rounded_corner"
                android:src="@drawable/ic_scan"
                android:textColor="@color/white"
                android:fontFamily="@font/opensans_semibold"
                android:layout_height="40dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/silver" />
        <include android:id="@+id/peopledata"  layout="@layout/person_layout" />

    </LinearLayout>

</androidx.cardview.widget.CardView>